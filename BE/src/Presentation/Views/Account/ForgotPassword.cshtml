@using Domain.Entities;
@model ForgotPasswordDTO;
@{
     ViewData["Title"] = "Restore Password";
}

<div class="container-fluid p-0 h-100 ">
    <div class="row justify-content-center h-100 ">
        <div class="col-5 bg-primary" align="center">
            <img src="~/Media/Images/Common/site_logo.png" width="200" style="margin-top: 15%" />
            <h1 class="text-white font-weight-bolder" style="font-size: 3em; margin-top: 30%">Game Sharing</h1>
        </div>
        <div class="col vertical-align">
            <div class="container">
                <div class="row justify-content-center align-content-center">
                    <div class="col justify-content-center align-content-center">
                        <h3 class="mt-xl-5 text-primary text-center mb-xl-5 font-weight-bold">Restore Password</h3>
                        <form id="forgotPasswordForm" asp-action="ForgotPassword" asp-controller="Account" method="post" class="pb-lg-2">
                            @if (ViewData["Success"] == null)
                            {
                                <div>
                                    <br />
                                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Enter your email", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email)
                                </div>
                                <br />
                            }
                            <div class="form-group mt-lg-4 text-center">
                                <span class="text-danger">@ViewData["Error"]</span>
                            </div>
                            <div class="form-group mt-lg-4 text-center">
                                <span class="text-success">@ViewData["Success"]</span>
                            </div>
                            @if (ViewData["Success"] == null)
                            {
                                <div class="form-group mt-lg-4 text-center">
                                    <button id="forgotPasswordSubmit" type="submit" class="btn btn-primary rounded col-5">Send confirmation link</button>
                                </div>
                            }
                        </form>
                        <div class="border-top card-body text-center mt-lg-2"><a asp-action="Login" asp-controller="Account" style="font-weight: bold;">Back to Sign In</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('header').empty();
        $('footer').empty();
        $("body").css("height", "100%");
        $("html").css("height", "100%");
        $(".container-fluid").addClass("h-100");
        $("main").removeClass('pb-3').addClass("h-100");
    </script>
    <script>
        $("#forgotPasswordForm").submit(function (e) {
            $("#forgotPasswordSubmit").attr("disabled", true);
            return true;
        });
    </script>
}