@using Domain.Entities;
@model ResetPasswordDTO;
@{ 
    ViewData["Title"] = "Reset Password";
}

<div class="container-fluid p-0 h-100 ">
    <div class="row justify-content-center h-100 ">
        <div class="col-5 bg-primary" align="center">
            <img src="~/Media/Images/Common/site_logo.png" width="200" style="margin-top: 15%" />
            <h1 class="text-white font-weight-bolder" style="font-size: 3em; margin-top: 30%">Book Sharing</h1>
        </div>
        <div class="col vertical-align">
            <div class="container">
                <div class="row justify-content-center align-content-center">
                    <div class="col justify-content-center align-content-center">
                        <h3 class="mt-xl-5 text-primary text-center mb-xl-5 font-weight-bold">Reset Password</h3>
                        <form asp-action="ResetPassword" asp-controller="Account" method="post" class="pb-lg-2">
                            <input asp-for="Token" type="hidden" />
                            <input asp-for="Email" type="hidden" />
                            <div>
                                <br />
                                @Html.TextBoxFor(m => m.Password, new { id = "passwordInput", data_toggle = "tooltip", data_placement = "bottom", title = "Only 8 or more alphanumeric characters accepted", placeholder = "Enter your new password", @class = "form-control red-tooltip", @type="password"})
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                            <div>
                                <br />
                                @Html.TextBoxFor(m => m.ConfirmPassword, new { placeholder = "Confirm your new password", @class = "form-control", @type = "password" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>
                            <br />
                            <div class="form-group mt-lg-4 text-center">
                                <span class="text-danger">@ViewData["Error"]</span>
                            </div>
                            <div class="form-group mt-lg-4 text-center">
                                <button type="submit" class="btn btn-primary rounded col-5">Change the password</button>
                            </div>
                        </form>
                        <div class="border-top card-body text-center mt-lg-2"><a asp-action="Login" asp-controller="Account" style="font-weight: bold;">Back to Sign In</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('header').empty();
        $('footer').empty();
        $("body").css("height", "100%");
        $("html").css("height", "100%");
        $(".container-fluid").addClass("h-100");
        $("main").removeClass('pb-3').addClass("h-100");
    </script>
}